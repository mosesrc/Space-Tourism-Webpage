@inject IJSRuntime JsRuntime

<section class="crew-body">

    <div class="member-info">

        <h2>COMMANDER</h2>
        <h1>DOUGLAS HURLEY</h1>
        <p>
            Douglas Gerald Hurley is an American engineer, former Marine Corps pilot
            and former NASA astronaut. He launched into space for the third time as
            commander of Crew Dragon Demo-2.
        </p>

        <div class="progress-container">
            <a @onclick="ActiveIndicator" class="circle active"></a>
            <a @onclick="ActiveIndicator"  class="circle"></a>
            <a @onclick="ActiveIndicator"  class="circle"></a>
            <a @onclick="ActiveIndicator"  class="circle"></a>
        </div>
    </div>
    <img src="assets/crew/image-douglas-hurley.png" alt="Commander" />
</section>

@code {
    async Task ActiveIndicator()
    {
        await JsRuntime.InvokeVoidAsync(identifier: "crewIndicators");
    }
}
